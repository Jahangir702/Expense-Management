@model Domain.Entities.Expense
@{
    ViewData["Title"] = "Details";
}

<div class="row offset-2 CardOffset">
    <div class="col-md-10 col-lg-10 col-sm-10 p-4 ClCard">

        <!--TITLE-->
        <div class="pagetitle">
            <h1 class="card-title fs-2 mb-0">Expense</h1>
            <hr class="customhr mt-0">
        </div>

        <div class="row">
            <div class="col-md-12 col-sm-12">

                <!--ALERT MESSAGE-->
                @if (TempData[Utilities.Constants.SessionConstants.Message] != null)
                {
                    <div class="row g-3 me-0 ms-0 mt-1">
                        <div class="alert alert-success" role="alert">
                            @TempData[Utilities.Constants.SessionConstants.Message]
                        </div>
                    </div>
                }

                <!--CARD START-->
                <div class="card table-responsive mt-3 p-3">
                    <div class="card-body">

                        <h4 class="card-title fs-4">Expense Details</h4>
                        <hr class="mt-0" />

                        <!--Expense NAME-->
                        <div class="row mt-3">
                            <div class="col-lg-5 col-md-5 col-sm-5 col-6 label fw-bolder"> Expense Name </div>
                            <div class="col-lg-5 col-md-7 col-sm-7 col-6"> : @Model.Description </div>
                        </div>

                        <div class="row mt-3">
                            <div class="col-lg-5 col-md-5 col-sm-5 col-6 label fw-bolder"> Expense Category </div>
                            <div class="col-lg-5 col-md-7 col-sm-7 col-6"> : @Model.ExpenseCategories.Description </div>
                        </div>

                        <div class="row mt-3">
                            <div class="col-lg-5 col-md-5 col-sm-5 col-6 label fw-bolder"> Price </div>
                            <div class="col-lg-5 col-md-7 col-sm-7 col-6"> : @Model.Price </div>
                        </div>

                        <div class="row mt-3">
                            <div class="col-lg-5 col-md-5 col-sm-5 col-6 label fw-bolder"> Expense Date </div>
                            <div class="col-lg-5 col-md-7 col-sm-7 col-6"> : @Model.ExpenseDate </div>
                        </div>

                    </div>
                </div>
                <!--CARD END-->
                <!--ACTION-->
                <div class="text-center">
                    <a asp-controller="Expenses" asp-action="Index" class="btn btn-secondary justify-content-center"><i class="bi bi-check2-circle"></i> Finish</a>
                </div>

            </div>
        </div>
    </div>
</div>